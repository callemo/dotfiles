#!/bin/sh
# usage: vimget [flags] url
# Install vim plugins.
# Flags:
#  -o Optional.

usage() { sed -En '2,/^[^#]/ s/^# //p' "$0" >&2; }

dest="$HOME/.vim/pack/default/start"
while getopts :o f
do
	case $f in
	o)  dest="$HOME/.vim/pack/default/opt";;
	\?) usage; exit 2;;
	esac
done
shift $((OPTIND - 1))

[ $# -ne 1 ] && { usage ; exit 1; }

url=$1
name=${url##*/}; name=${name%.*}

dir="$dest/$name"
if [ -e "$dir" ]
then
	git -C "$dir" pull
else
	mkdir -p "$dest"
	git -C "${dest}" clone "${url}"
fi

if [ -d "$dir/doc" ]
then
	vim -u NONE -c "helptags $dir/doc" -c q >/dev/null 2>&1
fi
