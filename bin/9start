#!/bin/sh
# Starts the Plan 9 from User Space windows with Go fonts and the dash(1) shell.

for i in plumber fontsrv
do
  if pgrep -q "$i"
  then
    continue
  fi
  "$i" &
done

set -a
ENV="$DOTFILES/9.sh"
SHELL=/bin/dash
EDITOR=E
PAGER=nobs
acmeshell="$SHELL"
home="$HOME"
user="$USER"
devdrawretina=1
fixfont=/usr/local/plan9/font/pelm/unicode.9.font,/mnt/font/Menlo-Regular/25a/font
varfont=/lib/font/bit/lucsans/euro.8.font,/mnt/font/LucidaGrande/30a/font
# fixfont=/lib/font/bit/lucm/unicode.9.font,/mnt/font/GoMono/28a/font
# varfont=/lib/font/bit/lucsans/euro.8.font,/mnt/font/GoRegular/30a/font
set +a

PATH="$DOTFILES/acme/bin:$PATH" \
  exec "$PLAN9"/bin/acme -a -W 1200x720 -f "$varfont" -F "$fixfont" "$@"
