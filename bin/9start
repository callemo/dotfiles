#!/bin/sh

set -eu

export ENV="$DOTFILES/9.sh"
export EDITOR=E
export PAGER=nobs
export acmeshell="$SHELL"
export home="$HOME"
export user="$USER"

: "${VARFONT=/mnt/font/GoRegular/13a/font}"
: "${FIXFONT=/mnt/font/GoMono/13a/font}"

pgrep plumber || plumber &

PATH="$DOTFILES/acme:$PATH" \
	exec "${PLAN9:-/usr/local/plan9}"/bin/acme -a -f "$VARFONT" -F "$FIXFONT" "$@"
