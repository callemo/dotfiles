#!/bin/sh
# usage: pareto [-n column] [files...]
# pareto - summarizes numeric columns cummulative sum and percentage
# of the total.

usage() { sed -En '2,/^[^#]/ s/^# //p' "$0" >&2; }

while getopts :n: f
do
	case $f in
	n)  narg=$OPTARG;;
	\?) usage; exit 2;;
	esac
done
shift $((OPTIND - 1))

awk '
BEGIN { n = '"${narg:-1}"'
      }
      { line[NR] = $0
        num[NR] = $n
        sum += $n
        csum[NR] = sum
      }
END   { for (i = 1; i <= NR; i++)
            print line[i], \
                sprintf("%0.2f%%", num[i] / sum * 100), \
                sprintf("%0.2f%%", csum[i] / sum * 100)
      }' "$@"
