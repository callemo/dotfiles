#!/bin/sh
# Starts the Acme interactive text window.

readonly fixfont=/lib/font/bit/lucm/unicode.9.font,/mnt/font/GoMono/28a/font
readonly varfont=/lib/font/bit/lucsans/euro.8.font,/mnt/font/GoRegular/30a/font
readonly winsize=1200x720

for i in plumber fontsrv
do
  if pgrep "$i"
  then
    continue
  fi
  "$i" &
done

set -a

EDITOR=E
ENV=$DOTFILES/acme.sh
PAGER=nobs
SHELL=/bin/dash
acmeshell="$SHELL"
home="$HOME"
user="$USER"

exec 9 acme -a -W "$winsize" -f "$varfont" -F "$fixfont" "$@"
