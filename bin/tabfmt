#!/bin/sh
# usage: tabfmt [-F fs -d ofs -p] [files...]
# Tabfmt formats tabulated data into columns of constant width padded
# with space.
#
# Options:
#   -F fs   Field separator (default: tab)
#   -d ofs  Output field separator (default: space)
#   -p      Pad all fields to column width

fs='\t'
ofs=' '
pad=0

usage() { sed -En '2,/^[^#]/ s/^# //p' "$0" >&2; }
while getopts :F:d:ph f
do
	case $f in
	h) usage; exit 0 ;;
	F) fs="$OPTARG" ;;
	d) ofs="$OPTARG" ;;
	p) pad=1 ;;
	\?) usage; exit 2;;
	esac
done
shift $((OPTIND - 1))

awk '
BEGIN {
	FS = "'"$fs"'"
	OFS = "'"$ofs"'"
	pad = '"$pad"'
}
{
	for (i = 1; i <= NF; i++) {
		values[NR, i] = $i
		if ((w = length($i)) > widths[i])
			widths[i] = w
		if (w > maxwidth)
			maxwidth = w
		if (NF > maxnf)
			maxnf = NF
	}
}
END {
	for (i = 1; i <= maxwidth; i++)
		blanks = blanks " "
	m = NR
	n = maxnf
	for (i = 1; i <= m; i++) {
		for (j = 1; j <= n; j++) {
			printf "%s", values[i, j]
			if ((j < n) || pad)
				printf "%s",
					substr(blanks, 1, widths[j] - length(values[i, j]))
			if (j < n)
				printf OFS
		}
		print ""
	}
}' "$@"
