#!/bin/sh
# Provides full-text search indexing and querying.
# Syntax: https://www.sqlite.org/fts5.html#full_text_query_syntax

readonly db=fts.db

hflag=
iflag=
rflag=
while getopts hir i
do
  case $i in
  h) hflag=1 ;;
  i) iflag=1 ;;
  r) rflag=1 ;;
  ?) echo "usage: $0 [-hir] query" >&2; exit 2 ;;
  esac
done
shift $((OPTIND - 1))

if [ -n "$rflag" ]
then
  rm "$db"
fi

if [ ! -f "$db" ]
then
  sqlite3 "$db" <<EOF
    create virtual table files
      using fts5(file, content, indexed_at unindexed, prefix='2 3 4', tokenize='porter');
EOF
fi

if [ -n "$iflag" ]
then
  d="$(date +%s)"
  find . -type f | grep -v "$db"'$' |
    while read -r i
    do
      sqlite3 "$db" <<EOF
insert into files(file, content, indexed_at)
  values('$i','$(sed -E 's/(['\''"])/\\1/g' "$i")','$d')
EOF
    done
fi

if [ $# -gt 0 ]
then
  hstart=
  hend=
  if [ -n "$hflag" ]
  then
    hstart="$(tput bold)$(tput setaf 1)"
    hend="$(tput sgr0)"
  fi
  sqlite3 -separator '	' "$db" <<EOF
    select file || ':', replace(snippet(files, 1, '$hstart', '$hend', 'â€¦', 15), '
', ' ') from files
      where files match '$1'
      order by rank;
EOF
fi
