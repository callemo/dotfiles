#!/bin/sh
# Updates Git branch.
set -eu

merge=
while getopts m: opt
do
  case $opt in
    m)  merge="$OPTARG" ;;
    \?) echo "usage: $(basename "$0") [-m branch]" >&2; exit 2 ;;
  esac
done
shift $((OPTIND - 1))

git pull --rebase --autostash

if [ -n "$merge" ]
then
  branch="$(git branch | awk '/^\*/ { print $2 }')"
  git checkout "$merge"
  git pull
  git checkout "$branch"
  git merge --no-ff -m "Merge $merge" "$merge"
fi
