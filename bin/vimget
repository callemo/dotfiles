#!/bin/bash
set -e
readonly plugin_home="$HOME/.vim/pack/default/start"
if [[ $# -lt 1 ]]; then
    echo "usage: $0 <url>"
    exit 1
fi
url=$1
name=${url##*/}
name=${name%.*}
mkdir -p "$plugin_home"
dir="$plugin_home/$name"
if [[ ! -e "$dir" ]]; then
    git -C "$plugin_home" clone "$url"
    if [[ -d "$dir/doc" ]]; then
	vim -u NONE -c "helptags $dir/doc" -c q
    fi
fi
