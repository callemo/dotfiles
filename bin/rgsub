#!/bin/sh
# usage: rgsub [-n] <regexp> <text>
# Recursive search and replace using regular expressions.
#
# Options:
#   -n    Dry run - show what would be changed without making changes

usage() { sed -En '2,/^[^#]/ s/^# //p' "$0" >&2; }

while getopts :nh f
do
	case $f in
	h)  usage; exit 0;;
	n)  nflag=$f;;
	\?) usage; exit 2;;
	esac
done
shift $((OPTIND - 1))

if [ $# -lt 2 ]
then
	usage
	exit 2
fi

r="$1"
t="$2"

case "$(uname)" in
OpenBSD)
	set -- sed -E -e 's/'"$r"'/'"$t"'/g' -i''
	;;
*)
	set -- sed -E -e 's/'"$r"'/'"$t"'/g' -i ''
	;;
esac

if [ -n "$nflag" ]
then
	set -- echo "$@"
fi

grep -E -R -I -l "$r" . |
	grep -E -v '(^|/)\.git' |
	xargs "$@"
